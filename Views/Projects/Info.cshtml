@model TaskManagementSystem.Models.Project
@{
    ViewBag.Title = "Info";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="box-title">
            <b>Projects Info</b>
        </h3>
    </div>
    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles">

            <thead>
                <tr>
                    <td><b>Project Name</b></td>
                    <td><b>Customer Name</b></td>
                    <td><b>Due Date</b></td>
                </tr>
            </thead>
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Customer</td>
                <td>@Model.Deadline</td>
            </tr>
        </table>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="box-title">
            <b>Developers</b>
        </h3>
    </div>
                
    <h3 style="padding:15px;margin:0px;padding-bottom:0"><i class="fas fa-user"></i>&nbsp;&nbsp;<a href="/Projects/AddUser?projectId=@Model.Id">Add Developer</a></h3>
    
    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles">

            <thead>
                <tr>
                    <td><b>Developer Name</b></td>
                    <td><b>Assign Task</b></td>
                    <td><b>Remove</b></td>
                </tr>
            </thead>
            @foreach (var user in Model.ProjectUsers)
            {
                <tr>
                    <td>@user.User.UserName</td>
                    <td>@Html.ActionLink("Assign","Create","Tasks")</td>
                    <td>@Html.ActionLink("Remove","RemoveFromProject","Projects")</td>
                </tr>
            }

        </table>
    </div>

</div>


