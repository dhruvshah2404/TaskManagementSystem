@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="modal-header">Roles</h3>

<div class="row col-sm-12 col-lg-12 col-md-12">
    <div class="col-sm-6 col-lg-6 col-md-6">

        <div class="card card-body">
            <div class="card-header">
                <h4>Create A New Role</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("CreatingRole", "Roles", new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div>
                        Role name: @Html.TextBox("role")
                        <br />
                        <br />
                        <input type="submit" value="Create Role" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
        <br />

        <div class="card card-body">
            <div class="card-header">
                <h4>Add a Role to a User</h4>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("AddRoleToUser", "Roles", new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div>
                        <p>User Name: @Html.DropDownList("email", (IEnumerable<SelectListItem>)ViewBag.Users, "Select ...")</p>
                        <p>Role Name: @Html.DropDownList("role", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")</p>
                        <input type="submit" value="Add role" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
        <br />
        <div class="card card-body">
            <div class="card-header">
                <h4>Remove Role from User</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("RemoveRoleFromUser", "Roles"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <p>User Name: @Html.DropDownList("email", (IEnumerable<SelectListItem>)ViewBag.Users, "Select ...")</p>
                    <p>Role Name: @Html.DropDownList("role", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")</p>
                    <p><input type="submit" value="Delete this user from Role" class=" btn btn-primary" /></p>

                }
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-lg-6 col-md-6">
        <div class="card card-body">
            <h3 class="media-middle">
                <b>
                    &nbsp;
                    <i class="fas fa-users"></i>
                    @Html.ActionLink("Users", "Users")
                </b>
            </h3>
        </div>
        <br />
        <div class="card card-body">
            <h3 class="media-middle">
                <b>
                    &nbsp;
                    <i class="fas fa-folder"></i>
                    @Html.ActionLink("Projects", "Index", "Projects")
                </b>
            </h3>
        </div>
        <br />
        <div class="card card-body">
            <h3 class="media-middle">
                <b>
                    &nbsp;
                    <i class="fas fa-tasks"></i>
                    @Html.ActionLink("Tasks", "Index", "Tasks")
                </b>
            </h3>
        </div>
    </div>

</div>

<div class="alert-info col-sm-12 col-lg-12 col-md-12">
    @ViewBag.message
</div>


