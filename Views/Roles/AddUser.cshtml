
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddUser</h2>
<div class="panel panel-primary">

    <div class="panel-heading">
        <h4>Add a Role to a User</h4>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("AddUser", "Roles", new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div>
                Email: @Html.TextBox("email")<br /><br />
                <p>Role Name: @Html.DropDownList("role", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")</p>
                <input type="submit" value="Create User" class="btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back", "Index")
</div>
<div class="alert-info col-sm-12 col-lg-12 col-md-12">
    @ViewBag.message
</div>

